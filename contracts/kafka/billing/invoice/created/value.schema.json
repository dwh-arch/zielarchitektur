{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "billing.invoice.created.value",
  "type": "object",
  "required": [
    "invoice_id",
    "created_at",
    "customer_id",
    "currency",
    "total_amount"
  ],
  "properties": {
    "invoice_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "customer_id": {
      "type": "string"
    },
    "currency": {
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "total_amount": {
      "type": "number"
    },
    "line_items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "sku",
          "quantity",
          "amount"
        ],
        "properties": {
          "sku": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1
          },
          "amount": {
            "type": "number"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}